<Window x:Class="Blood_Bridge.Signup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blood_Bridge"
        mc:Ignorable="d"
        Title="Signup" Height="475" Width="400" 
        ResizeMode="NoResize"
        WindowStyle="None" 
        
        WindowStartupLocation="CenterScreen">
    <Grid>


        <Button Content="X" Width="20" Height="20" 
        HorizontalAlignment="Right"
        Background="Red" Foreground="White"
        Click="CloseWindow" Margin="0,0,0,455" />

        <Label Content="  Welcome to Signup Page" FontSize="30" Foreground="red" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="52" Width="400" Margin="0,2,0,0"/>
        <Label Content="User Name:" FontSize="20" HorizontalAlignment="Left" Height="45" FontWeight="Bold" VerticalAlignment="Top" Width="148" Margin="113,54,0,0" RenderTransformOrigin="0.525,-0.59"/>
        <TextBox x:Name="UserName" HorizontalAlignment="Center" Margin="0,104,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="174" Height="30" RenderTransformOrigin="0.51,-1.1"/>
        <Label Content="Email:" FontSize="20" HorizontalAlignment="Left" Height="45" FontWeight="Bold" VerticalAlignment="Top" Width="148" Margin="113,134,0,0" RenderTransformOrigin="0.525,-0.59"/>
        <TextBox x:Name="Email" HorizontalAlignment="Center" Margin="0,179,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="174" Height="30" RenderTransformOrigin="0.51,-1.1"/>
        <Label Content="Phone number:" FontSize="20" HorizontalAlignment="Left" Height="45" FontWeight="Bold" VerticalAlignment="Top" Width="148" Margin="113,209,0,0" RenderTransformOrigin="0.525,-0.59"/>
        <TextBox x:Name="Phonenumber" HorizontalAlignment="Center" TextWrapping="Wrap"  VerticalAlignment="Top" Width="174" Height="30" RenderTransformOrigin="0.51,-1.1" Margin="0,254,0,0"/>
        <Label Content="Password:" FontSize="20" HorizontalAlignment="Left" Height="44"  FontWeight="Bold" VerticalAlignment="Top" Width="148" Margin="113,289,0,0"/>
        <PasswordBox x:Name="Password"  HorizontalAlignment="Center" Margin="0,333,0,0" VerticalAlignment="Top" Width="174" Height="30"/>
        <Button Content="Cancel" FontSize="20" Foreground="White" Background="red" HorizontalAlignment="Left" Margin="113,391,0,0" VerticalAlignment="Top" Height="38" Width="74" Click="Cancel"/>
        <Button Content="Signup" FontSize="20" Foreground="White" Background="red" HorizontalAlignment="Left" Margin="200,392,0,0" VerticalAlignment="Top" Height="37" Width="74" Click="signup"/>
    </Grid>
</Window>
