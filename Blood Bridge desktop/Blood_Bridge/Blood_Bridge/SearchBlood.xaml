<Window x:Class="Blood_Bridge.SearchBlood"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Blood_Bridge"
        mc:Ignorable="d"
        Title="SearchBlood" Height="450" Width="800">
    <Grid>

        <Label Content="        Search Blood " FontSize="30" Foreground="red" FontWeight="Bold" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="81" Width="400"/>

        <StackPanel Margin="20 40 20 20">
           
                <StackPanel Orientation="Horizontal" Margin="10">

                    <StackPanel Orientation="Horizontal" Margin="0,10">
                        <Label Content="District" FontSize="14" VerticalAlignment="Center" Width="100"/>
                        <TextBox Name="District" Width="250"/>
                    </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,10">
                    <Label Content="Blood Type" FontSize="14" VerticalAlignment="Center" Width="100"/>
                    <ComboBox Name="BloodTypeComboBox" Width="250">
                        <ComboBoxItem>O+</ComboBoxItem>
                        <ComboBoxItem>A+</ComboBoxItem>
                        <ComboBoxItem>B+</ComboBoxItem>
                        <ComboBoxItem>AB+</ComboBoxItem>
                        <ComboBoxItem>O-</ComboBoxItem>
                        <ComboBoxItem>A-</ComboBoxItem>
                        <ComboBoxItem>B-</ComboBoxItem>
                        <ComboBoxItem>AB-</ComboBoxItem>
                    </ComboBox>
                </StackPanel>


            </StackPanel>
             
           
        </StackPanel>
        <Button Content="Search" Foreground="White" Background="red" FontWeight="Bold" Width="100" Height="40" Margin="600,350,0,0" />
        <Button Content="Cancel" Foreground="White" Background="red" FontWeight="Bold" Width="100" Height="40" Margin="300,350,0,0" Click="Cancel"/>
    </Grid>
</Window>
